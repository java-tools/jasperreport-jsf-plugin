    <parameter name="locationUrl"
      value="http://jasperreportjsf.sourceforge.net/tld/jasperreports-jsf-1_0.tld" />
    <groups>
      <run>
        <include name="valid" />
      </run>
    </groups>
    <classes>
      <class name="net.sf.jasperreports.jsf.resource.providers.ClasspathResourceTest" />
      <class name="net.sf.jasperreports.jsf.resource.providers.ContextResourceTest" />
      <class name="net.sf.jasperreports.jsf.resource.providers.URLResourceTest" />
    </classes>
  </test>
  <test name="ResourceResolver">
    <classes>
      <class name="net.sf.jasperreports.jsf.resource.providers.DefaultResourceResolverTest" />
    </classes>
  </test>
</suite>