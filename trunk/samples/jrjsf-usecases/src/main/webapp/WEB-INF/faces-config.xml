<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

    <application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
        <view-handler>
            com.sun.facelets.FaceletViewHandler
        </view-handler>
        <resource-bundle>
            <base-name>
                net.sf.jasperreports.jsf.sample.usecases.Messages
            </base-name>
            <var>Messages</var>
        </resource-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>BooksReport</managed-bean-name>
        <managed-bean-class>
            net.sf.jasperreports.jsf.sample.usecases.beans.BooksReportBean
        </managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		
		<managed-property>
			<property-name>bookDAO</property-name>
			<property-class>
				net.sf.jasperreports.jsf.sample.usecases.dao.BookDAO
			</property-class>
			<value>#{bookDAO.jpa}</value>
		</managed-property>
	</managed-bean>

</faces-config>
