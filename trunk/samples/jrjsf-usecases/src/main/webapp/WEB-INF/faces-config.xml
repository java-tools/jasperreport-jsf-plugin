<?xml version="1.0" encoding="MacRoman"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

    <application>
        <view-handler>
            com.sun.facelets.FaceletViewHandler
        </view-handler>
        <resource-bundle>
            <var>Messages</var>
            <base-name>net.sf.jasperreports.jsf.sample.simple.Messages</base-name>
        </resource-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>BooksReport</managed-bean-name>
        <managed-bean-class>
            net.sf.jasperreports.jsf.sample.simple.BooksReportBean
        </managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

</faces-config>
