<!DOCTYPE view PUBLIC
      "-//Apache Software Foundation//DTD Shale Clay View Configuration 1.0//EN"
      "http://shale.apache.org/dtds/clay-config_1_0.dtd">

<view>

	<component jsfid="jr:dataSource" 
		componentType="net.sf.jasperreports.DataSource"
		extends="baseComponent"
	>
		<attributes>
			<set name="driverClass" bindingType="VB" />
			<set name="query" bindingType="VB" />
			<set name="type" bindingType="VB" />
			<set name="value" bindingType="VB" />
		</attributes>
	</component>

	<component jsfid="jr:report"
		componentType="net.sf.jasperreports.HtmlReport"
		extends="baseHtml"
	>
		<attributes>
			<set name="dataSource" bindingType="VB" />
			<set name="path" bindingType="VB" />
			<set name="subreportDir" bindingType="VB" />
			<set name="format" bindingType="VB" />
		</attributes>
	</component>
	
	<component jsfid="jr:reportLink"
		componentType="net.sf.jasperreports.HtmlReportLink"
		extends="baseHtml"
	>
		<attributes>
			<set name="dataSource" bindingType="VB" />
			<set name="path" bindingType="VB" />
			<set name="subreportDir" bindingType="VB" />
			<set name="format" bindingType="VB" />
		</attributes>
	</component>

</view>