<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">

    <application>
        <state-manager>
            net.sf.jasperreports.jsf.application.StateManagerImpl
        </state-manager>
    </application>

    <lifecycle>
        <phase-listener>
            net.sf.jasperreports.jsf.lifecycle.RestoreViewPhaseListener
        </phase-listener>
        <phase-listener>
            net.sf.jasperreports.jsf.lifecycle.RenderResponsePhaseListener
        </phase-listener>
    </lifecycle>

    <managed-bean>
        <managed-bean-name>ReportBean</managed-bean-name>
        <managed-bean-class>
            net.sf.jasperreports.jsf.test.profiler.bean.ReportTestBean
        </managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <component>
        <display-name>Data Source Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.DataSource
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.UIDataSource
        </component-class>
    </component>

    <component>
        <display-name>HTML Report Panel Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportPanel
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportPanel
        </component-class>
    </component>

    <component>
        <display-name>HTML Link Report Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportLink
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportLink
        </component-class>
    </component>

    <component>
        <display-name>HTML Command Link Report Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportCommandLink
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportCommandLink
        </component-class>
    </component>

    <component>
        <display-name>HTML Report Form Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportForm
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportForm
        </component-class>
    </component>

    <render-kit>
        <renderer>
            <component-family>
                javax.faces.Panel/net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Panel
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.PanelRenderer
            </renderer-class>
        </renderer>

        <renderer>
            <component-family>
                javax.faces.Output/net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Link
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.OutputLinkRenderer
            </renderer-class>
        </renderer>

        <renderer>
            <component-family>
                javax.faces.Command/net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Link
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.CommandLinkRenderer
            </renderer-class>
        </renderer>

        <renderer>
            <component-family>
                javax.faces.Form/net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Form
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.FormRenderer
            </renderer-class>
        </renderer>
    </render-kit>

</faces-config>