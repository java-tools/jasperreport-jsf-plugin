<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">

    <application>
        <state-manager>
            net.sf.jasperreports.jsf.application.StateManagerImpl
        </state-manager>
    </application>

    <lifecycle>
        <phase-listener>
            net.sf.jasperreports.jsf.lifecycle.RestoreViewPhaseListener
        </phase-listener>
        <phase-listener>
            net.sf.jasperreports.jsf.lifecycle.RenderResponsePhaseListener
        </phase-listener>
    </lifecycle>

    <component>
        <display-name>Report Source Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.Source
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.UISource
        </component-class>
    </component>

    <component>
        <display-name>HTML Report Frame Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportFrame
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportFrame
        </component-class>
    </component>

    <component>
        <display-name>HTML Link Report Component</display-name>
        <component-type>
            net.sf.jasperreports.jsf.HtmlReportLink
        </component-type>
        <component-class>
            net.sf.jasperreports.jsf.component.html.HtmlReportLink
        </component-class>
    </component>

    <render-kit>
        <renderer>
            <component-family>
                net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Frame
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.FrameRenderer
            </renderer-class>
        </renderer>

        <renderer>
            <component-family>
                net.sf.jasperreports.jsf.Report
            </component-family>
            <renderer-type>
                net.sf.jasperreports.jsf.Link
            </renderer-type>
            <renderer-class>
                net.sf.jasperreports.jsf.renderkit.html.OutputLinkRenderer
            </renderer-class>
        </renderer>

    </render-kit>

</faces-config>